{
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "extends": [
        "last",
        "prettier",
        "plugin:jest/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "babel",
        "prettier",
        "jest"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true, 
                "trailingComma": "none",
                "arrowParens": "always",
                "printWidth": 100
            }
        ],
        "no-var": ["error"],
        "prefer-const": "error",
        "no-use-before-define": "error"
    }
}
